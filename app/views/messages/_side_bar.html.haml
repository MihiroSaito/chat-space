.side-box
  .side-box__header
    %h3.side-box__header__left--box
      = current_user.name
    .side-box__header__right--box
      = link_to new_group_path do
        = icon('far', 'edit', class: "edit")
      = link_to edit_user_path(current_user) do
        = icon('fas', 'cog', class: "cog")
  .side-box__groups
    - current_user.groups.each do |group|
      .side-box__group
        =link_to group_messages_path(group) do
          %p.side-box__group__text
            = group.name
          %p.side-box__group__text2
            = group.show_last_message